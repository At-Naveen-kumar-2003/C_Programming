//1513. Number of Substrings With Only 1s

#include <stdio.h>
int numSub(char* s) 
{
    long long MOD = 1000000007;
    long long ans = 0;
    long long count = 0;   

    for (int i = 0; s[i] != '\0'; i++) {
        
        if (s[i] == '1') 
        {
            count++;
        } else 
        {    
            ans = (ans + (count * (count + 1)) / 2) % MOD;
            count = 0; 
        }
    }
    ans = (ans + (count * (count + 1)) / 2) % MOD;

    return (int)ans;
}
